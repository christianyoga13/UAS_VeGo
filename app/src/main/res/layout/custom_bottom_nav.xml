<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/custom_bottom_nav"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:baselineAligned="false"
    android:orientation="horizontal"
    android:background="@drawable/rounded_navbar_background"
    android:gravity="center"
    android:elevation="8dp"
    android:padding="4dp"
    android:clipToPadding="false">


<!-- Updated nav_home with more space between icon and text -->
    <LinearLayout
        android:id="@+id/nav_home"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icon_home"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_view"
            android:contentDescription="@string/home"
            app:tint="@color/colorUnselected"
            android:layout_marginBottom="4dp" /> <!-- Adds gap between icon and text -->

        <TextView
            android:id="@+id/text_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Home"
            android:textSize="14sp"
            android:textColor="@color/colorUnselected"
            android:gravity="center"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Promo Layout -->
    <LinearLayout
        android:id="@+id/nav_promo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:minHeight="48dp"
        android:minWidth="48dp"
        tools:ignore="UseCompoundDrawables">

        <ImageView
            android:id="@+id/icon_promo"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_info_details"
            android:contentDescription="@string/promo"
            app:tint="@color/colorUnselected"
            android:layout_marginBottom="4dp" /> <!-- Adds gap between icon and text -->

        <TextView
            android:id="@+id/text_promo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Promo"
            android:textSize="14sp"
            android:textColor="@color/colorUnselected"
            android:gravity="center"
            tools:ignore="HardcodedText" />
    </LinearLayout>

    <!-- Payment Layout -->
    <LinearLayout
        android:id="@+id/nav_payment"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:minHeight="48dp"
        android:minWidth="48dp">

        <ImageView
            android:id="@+id/icon_payment"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_add"
            android:contentDescription="@string/payment"
            app:tint="@color/colorUnselected"
            android:layout_marginBottom="4dp" /> <!-- Adds gap between icon and text -->

        <TextView
            android:id="@+id/text_payment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Payment"
            android:textSize="14sp"
            android:textColor="@color/colorUnselected"
            android:gravity="center" />
    </LinearLayout>

    <!-- Profile Layout -->
    <LinearLayout
        android:id="@+id/nav_profile"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical"
        android:gravity="center"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground"
        android:padding="8dp"
        android:minHeight="48dp"
        android:minWidth="48dp">

        <ImageView
            android:id="@+id/icon_profile"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:src="@android:drawable/ic_menu_myplaces"
            android:contentDescription="@string/profile"
            app:tint="@color/colorUnselected"
            android:layout_marginBottom="4dp" /> <!-- Adds gap between icon and text -->

        <TextView
            android:id="@+id/text_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Profile"
            android:textSize="14sp"
            android:textColor="@color/colorUnselected"
            android:gravity="center" />
    </LinearLayout>

</LinearLayout>
